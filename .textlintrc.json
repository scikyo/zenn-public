{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md"]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": ["/^:::/m"]
    }
  },
  "rules": {
    "preset-ja-spacing": {
      "ja-no-space-between-full-width": false,
      "ja-space-between-half-and-full-width": { "space": "always" },
      "ja-space-around-code": true,
      "ja-space-around-link": true
    },
    "preset-ja-technical-writing": true
  }
}
